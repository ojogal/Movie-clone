<div class="d-flex flex-column align-items-center card bg-black border-0 text-white px-2 py-3">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-2 d-flex flex-column">
    <%= f.label :email, style: "display: block", class: "form-label w-50" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :password, style: "display: block", class: "form-label w-50" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-2 d-flex flex-column">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mb-2 d-flex flex-column">
    <%= f.submit "Log in", class: "p-1 btn btn-warning" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>