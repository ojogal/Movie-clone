<div class="d-flex flex-column align-items-center card bg-black border-0 text-white px-2 py-3">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :email, style: "display: block", class: "form-label w-50" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :password, style: "display: block", class: "form-label w-50" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :password_confirmation, style: "display: block", class: "form-label w-50" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.button :button, type: :submit, class: "p-1 btn btn-warning" %>
  </div>
<% end %>
</div>